{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "/writ/io/user",
    "type": "object",
    "description": "A writ user validated from the server",
    "properties": {
        "email": {
            "id": "/writ/io/user/email",
            "type": "string",
            "minLength": 3,
            "maxLength": 128,
            "format": "email",
            "chance": "email",
            "permission": {
                "read": 10,
                "write": 10,
                "owner": true
            },
            "unique": true
        },
        "name": {
            "id": "/writ/io/user/name",
            "type": "string",
            "minLength": 3,
            "maxLength": 128,
            "chance": "name",
            "permission": {
                "read": 100,
                "write": 10,
                "owner": true
            }
        },
        "permission": {
            "id": "/writ/io/user/permission",
            "type": "integer",
            "minimum": 0,
            "maximum": 100,
            "exclusiveMinimum": true,
            "default": 30,
            "permission": {
                "read": 100,
                "write": 10
            }
        },
        "password": {
            "type": "string",
            "minLength": 3,
            "maxLength": 128,
            "permission": {
                "read": -1,
                "write": 10,
                "owner": true
            }
        }
    },
    "additionalProperties": false,
    "required": [
        "email",
        "name",
        "password"
    ]
}