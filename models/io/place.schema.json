{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "/writ/place",
    "type": "object",
    "description": "The place definition",
    "properties": {
        "id": {
            "id": "/writ/place/id",
            "type": "string",
            "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-4[0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$",
            "faker": "random.uuid"
        },
        "creator": {
            "$ref": "/writ/user/id"
        },
        "pos": {
            "description": "Position of the place in the world.",
            "type": "object",
            "properties": {
                "x": {
                    "type": "integer"
                },
                "y": {
                    "type": "integer"
                },
                "z": {
                    "type": "integer"
                }
            },
            "required": [
                "x",
                "y",
                "z"
            ]
        },
        "title": {
            "type": "string",
            "faker": "lorem.sentence"
        },
        "items": {
            "type": "array",
            "uniqueItems": true,
            "items": {
                "$ref": "/writ/item/id"
            }
        },
        "passages": {
            "description": "Position of the place in the world.",
            "type": "object",
            "minProperties": 2,
            "properties": {
                "north": {
                    "$ref": "/writ/passage/id"
                },
                "east": {
                    "$ref": "/writ/passage/id"
                },
                "south": {
                    "$ref": "/writ/passage/id"
                },
                "west": {
                    "$ref": "/writ/passage/id"
                },
                "up": {
                    "$ref": "/writ/passage/id"
                },
                "down": {
                    "$ref": "/writ/passage/id"
                }
            }
        }
    },
    "required": [
        "creator",
        "id",
        "pos",
        "title",
        "items",
        "passages"
    ]
}