{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "/writ/item",
    "type": "object",
    "properties": {
        "id": {
            "id": "/writ/item/id",
            "type": "string",
            "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-4[0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$",
            "faker": "random.uuid"
        },
        "meta": {
            "properties": {
                "creator": {
                    "$ref": "/writ/db/user/id"
                },
                "created_at": {
                    "type": "string",
                    "pattern": "^([\\+-]?\\d{4}(?!\\d{2}\b))((-?)((0[1-9]|1[0-2])(\\3([12]\\d|0[1-9]|3[01]))?|W([0-4]\\d|5[0-2])(-?[1-7])?|(00[1-9]|0[1-9]\\d|[12]\\d{2}|3([0-5]\\d|6[1-6])))([T\\s]((([01]\\d|2[0-3])((:?)[0-5]\\d)?|24\\:?00)([\\.,]\\d+(?!:))?)?(\\17[0-5]\\d([\\.,]\\d+)?)?([zZ]|([\\+-])([01]\\d|2[0-3]):?([0-5]\\d)?)?)?)?$",
                    "faker": "date.past"
                },
                "updated_at": {
                    "type": "string",
                    "pattern": "^([\\+-]?\\d{4}(?!\\d{2}\b))((-?)((0[1-9]|1[0-2])(\\3([12]\\d|0[1-9]|3[01]))?|W([0-4]\\d|5[0-2])(-?[1-7])?|(00[1-9]|0[1-9]\\d|[12]\\d{2}|3([0-5]\\d|6[1-6])))([T\\s]((([01]\\d|2[0-3])((:?)[0-5]\\d)?|24\\:?00)([\\.,]\\d+(?!:))?)?(\\17[0-5]\\d([\\.,]\\d+)?)?([zZ]|([\\+-])([01]\\d|2[0-3]):?([0-5]\\d)?)?)?)?$",
                    "faker": "date.recent"
                }
            },
            "required": [
                "creator",
                "created_at",
                "updated_at"
            ]
        },
        "title": {
            "type": "string",
            "minLength": 3,
            "maxLength": 128,
            "faker": "commerce.productName"
        },
        "desc": {
            "type": "string",
            "minLength": 3,
            "maxLength": 2048,
            "faker": "lorem.paragraph"
        },
        "hints": {
            "type": "object",
            "properties": {
                "roomed": {
                    "description": "Is item useful only in this room?",
                    "type": "boolean"
                },
                "usable": {
                    "description": "Is this item useful to put into to my inventory?",
                    "type": "boolean"
                }
            }
        },
        "actions": {
            "type": "object",
            "additionalProperties": false,
            "patternProperties": {
                "^[a-z_]{3,60}[a-z]$": {
                    "type": "string",
                    "maxLength": 2048,
                    "minLength": 10,
                    "pattern": "^function *\\(((?: *[a-z_]+ *,)+ *[a-z_]+ *)\\)"
                }
            }
        },
        "attributes": {
            "type": "object",
            "additionalProperties": false,
            "patternProperties": {
                "^(is|has)_[a-z_]{3,60}[a-z]$": {
                    "type": "boolean"
                },
                "^reads$": {
                    "type": "string",
                    "maxLength": 2048,
                    "minLength": 5,
                    "faker": "lorem.paragraphs"
                },
                "^smells|tastes|feels|sounds$": {
                    "type": "string",
                    "maxLength": 512,
                    "minLength": 5,
                    "faker": "lorem.sentence"
                }
            }
        },
        "events": {
            "type": "object",
            "additionalProperties": false,
            "patternProperties": {
                "^on_[a-z_]{3,60}[a-z]$": {
                    "type": "string",
                    "maxLength": 2048,
                    "minLength": 10,
                    "pattern": "^function *\\(((?: *[a-z_]+ *,)+ *[a-z_]+ *)\\)"
                }
            }
        },
        "contains": {
            "type": "array",
            "uniqueItems": true,
            "items": {
                "$ref": "/writ/item/id"
            }
        },
        "payloads": {
            "type": "array",
            "uniqueItems": true,
            "items": {
                "pattern": "^([A-Za-z0-9+/]{4})*([A-Za-z0-9+/]{4}|[A-Za-z0-9+/]{3}=|[A-Za-z0-9+/]{2}==)$"
            }
        }
    },
    "required": [
        "id",
        "email",
        "title",
        "desc",
        "hints",
        "actions",
        "meta"
    ]
}