{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "/writ/io/place",
    "type": "object",
    "description": "The place definition",
    "properties": {
        "name": {
            "type": "string",
            "chance": "name",
            "permission": {
                "read": 100,
                "write": 10,
                "owner": true
            }
        },
        "pos": {
            "description": "Position of the place in the world.",
            "type": "object",
            "properties": {
                "x": {
                    "type": "integer"
                },
                "y": {
                    "type": "integer"
                },
                "z": {
                    "type": "integer"
                }
            },
            "required": [
                "x",
                "y",
                "z"
            ],
            "permission": {
                "read": 100,
                "write": 10,
                "owner": true
            }
        },
        "desc": {
            "type": "string",
            "faker": "lorem.paragraph",
            "permission": {
                "read": 100,
                "write": 10,
                "owner": true
            }
        },
        "items": {
            "type": "array",
            "uniqueItems": true,
            "items": {
                "$ref": "/writ/db/item/id"
            },
            "permission": {
                "read": 100,
                "write": 10,
                "owner": true
            }
        },
        "passages": {
            "description": "Passages connecting this place to other places.",
            "type": "object",
            "minProperties": 2,
            "properties": {
                "north": {
                    "$ref": "/writ/db/passage/id"
                },
                "east": {
                    "$ref": "/writ/db/passage/id"
                },
                "south": {
                    "$ref": "/writ/db/passage/id"
                },
                "west": {
                    "$ref": "/writ/db/passage/id"
                },
                "up": {
                    "$ref": "/writ/db/passage/id"
                },
                "down": {
                    "$ref": "/writ/db/passage/id"
                }
            },
            "permission": {
                "read": 100,
                "write": 10,
                "owner": true
            }
        }
    },
    "required": [
        "creator",
        "id",
        "pos",
        "name",
        "items",
        "passages"
    ]
}