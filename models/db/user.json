{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "/writ/db/user",
    "type": "object",
    "description": "A writ user",
    "properties": {
        "_id": {
            "id": "/writ/db/user/id",
            "type": "string",
            "pattern": "^user\/[0-9a-f]{8}-[0-9a-f]{4}-4[0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$",
            "permission": {
                "read": 100,
                "write": 0
            }
        },
        "_rev": {
            "type": "string",
            "permission": {
                "read": 10,
                "write": 0
            }
        },
        "id": {
            "type": "string",
            "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-4[0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$",
            "faker": "random.uuid",
            "permission": {
                "read": 100,
                "write": 0
            }
        },
        "secret": {
            "type": "string",
            "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-4[0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$",
            "faker": "random.uuid",
            "permission": {
                "read": 100,
                "write": 0
            }
        },
        "email": {
            "type": "string",
            "format": "email",
            "chance": "email",
            "permission": {
                "read": 29,
                "write": 29
            },
            "unique": true
        },
        "name": {
            "type": "string",
            "chance": "name",
            "permission": {
                "read": 100,
                "write": 29
            }
        },
        "permission": {
            "type": "integer",
            "minimum": 0,
            "maximum": 100,
            "exclusiveMinimum": true,
            "default": 30,
            "permission": {
                "read": 100,
                "write": 10
            }
        },
        "salt": {
            "type": "string",
            "pattern": "^[a-f0-9]{512}$",
            "permission": {
                "read": 0,
                "write": 0
            }
        },
        "hash": {
            "type": "string",
            "pattern": "^[a-f0-9]{128}$",
            "permission": {
                "read": 0,
                "write": 0
            }
        },
        "created": {
            "type": "string",
            "pattern": "^([\\+-]?\\d{4}(?!\\d{2}\b))((-?)((0[1-9]|1[0-2])(\\3([12]\\d|0[1-9]|3[01]))?|W([0-4]\\d|5[0-2])(-?[1-7])?|(00[1-9]|0[1-9]\\d|[12]\\d{2}|3([0-5]\\d|6[1-6])))([T\\s]((([01]\\d|2[0-3])((:?)[0-5]\\d)?|24\\:?00)([\\.,]\\d+(?!:))?)?(\\17[0-5]\\d([\\.,]\\d+)?)?([zZ]|([\\+-])([01]\\d|2[0-3]):?([0-5]\\d)?)?)?)?$",
            "faker": "date.recent"
        },
        "updated": {
            "type": "string",
            "pattern": "^([\\+-]?\\d{4}(?!\\d{2}\b))((-?)((0[1-9]|1[0-2])(\\3([12]\\d|0[1-9]|3[01]))?|W([0-4]\\d|5[0-2])(-?[1-7])?|(00[1-9]|0[1-9]\\d|[12]\\d{2}|3([0-5]\\d|6[1-6])))([T\\s]((([01]\\d|2[0-3])((:?)[0-5]\\d)?|24\\:?00)([\\.,]\\d+(?!:))?)?(\\17[0-5]\\d([\\.,]\\d+)?)?([zZ]|([\\+-])([01]\\d|2[0-3]):?([0-5]\\d)?)?)?)?$",
            "faker": "date.recent"
        }
    },
    "additionalProperties": false,
    "required": [
        "_id",
        "email",
        "name",
        "permission",
        "salt",
        "hash",
        "created",
        "updated"
    ]
}