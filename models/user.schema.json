{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "/writ/user",
    "type": "object",
    "description": "A writ user",
    "properties": {
        "id": {
            "id": "/writ/user/id",
            "type": "string",
            "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-4[0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$",
            "faker": "random.uuid",
            "unique": true
        },
        "email": {
            "type": "string",
            "format": "email",
            "chance": "email",
            "private": true,
            "unique": true
        },
        "name": {
            "type": "string",
            "chance": "name"
        },
        "password": {
            "type": "string",
            "private": true
        },
        "salt": {
            "type": "string",
            "private": true
        },
        "hash": {
            "type": "string",
            "private": true
        }
    },
    "oneOf": [
        { "required": [ "password" ] },
        { "required": [ "salt", "hash", "id" ] }
    ],
    "additionalProperties": false,
    "required": [
        "email",
        "name"
    ]
}