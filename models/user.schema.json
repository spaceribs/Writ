{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "/writ/user",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-4[0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$",
            "faker": "random.uuid"
        },
        "email": {
            "type": "string",
            "format": "email",
            "chance": "email"
        },
        "name": {
            "type": "string",
            "chance": "name"
        }
    },
    "required": [
        "id",
        "email",
        "name"
    ]
}