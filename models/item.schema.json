{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "/writ/item",
    "type": "object",
    "properties": {
        "id": {
            "id": "/writ/item/id",
            "type": "string",
            "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-4[0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$",
            "faker": "random.uuid"
        },
        "creator": {
            "$ref": "/writ/user/id"
        },
        "title": {
            "type": "string",
            "faker": "commerce.productName"
        },
        "desc": {
            "type": "string",
            "faker": "lorem.paragraph"
        },
        "hints": {
            "type": "object",
            "properties": {
                "take": {
                    "description": "Is it useful to add this to my inventory?",
                    "type": "boolean"
                },
                "apply": {
                    "description": "Is it useful to apply to other items?",
                    "type": "boolean"
                }
            },
            "required": [
                "take",
                "apply"
            ]
        },
        "actions": {
            "type": "object",
            "properties": {
            }
        }
    },
    "required": [
        "id",
        "email",
        "title",
        "desc",
        "users"
    ]
}